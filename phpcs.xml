<?xml version="1.0"?>
<ruleset name="WHMCS">

    <file>mollierecurring.php</file>
    <file>mollierecurring</file>
    <file>callback</file>
    <exclude-pattern>mollierecurring/vendor/*</exclude-pattern>

    <!-- PSR 1 -->
    <rule ref="PSR1">
        <exclude name="PSR1.Files.SideEffects"/>
    </rule>

    <!-- PSR 2 -->
    <rule ref="PSR2"/>

    <!-- Comments -->
    <rule ref="Squiz.Commenting">
        <exclude name="Squiz.Commenting.ClosingDeclarationComment" />
        <exclude name="Squiz.Commenting.FileComment" />
        <exclude name="Squiz.Commenting.LongConditionClosingComment" />
    </rule>

    <!-- PHPCompatibility -->
    <config name="installed_paths" value="mollierecurring/vendor/frenck/php-compatibility" />
    <config name="testVersion" value="5.3-7.1"/>

    <rule ref="PHPCompatibility">
        <exclude name="PHPCompatibility.PHP.DefaultTimezoneRequired" />
    </rule>
</ruleset>
